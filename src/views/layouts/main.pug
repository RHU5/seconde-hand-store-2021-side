include ../mixins/flashMessage

doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel='stylesheet', href="/styles.css")
        link(rel="shortcut icon", href="https://shstore-side-project.s3.ap-northeast-2.amazonaws.com/assets/gift-box-16px.png")
        title #{pageTitle} | #{webTitle}
    body
        if messages.error
            +flashMessage({
                type: 'error',
                text: messages.error
            })
        else if messages.success
            +flashMessage({
                type: 'success',
                text: messages.success
            })
        else if messages.info
            +flashMessage({
                type: 'info',
                text: messages.info
            })     
        //- header
        include ../partials/header
        //- nav
        include ../partials/nav
        //- main
        main.main
            block content 
        //- footer
        include ../partials/footer
        script(src="/main.js")
        script(src="https://kit.fontawesome.com/02aca41e50.js", crossorigin="anonymous")
    